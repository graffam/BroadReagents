    <% if params["machine_id"] %>
    <table>
      <thead>
        <tr>
          <% @kits.each do |kit| %>
            <th> <%= kit.kitname %> </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
          <%= form_for @order do |f| %>
          <tr>
            <%= f.fields_for :listitems do |listitems_form| %>
              <td>
                <%= listitems_form.text_field :amount %>
                <%= listitems_form.hidden_field :kit_id %>
              </td>
              <% @counter += 1 %>
            <% end %>
            <%= f.submit "Place Order" %>
          </tr>
          <% end %>
      </tbody>
    </table>
    <% else %>
      <% @machines.each do |machine| %>
        <ul>
          <li> <%= link_to machine.machinename, new_order_path(machine_id: machine.id) %> </li>
        </ul>
      <% end %>
    <% end %>
