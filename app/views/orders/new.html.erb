

<table>
  <thead>
    <tr>
      <% @kits.each do |kit| %>
        <th> <%= kit.name %></th>
      <% end %>
        <th>Needed By</th>
        <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= form_for [@machine,@order] do |f| %>
        <%= f.fields_for :kit_order do |kit_order_form| %>
          <% @kits.each do |kit| %>
            <td>
              <%= kit_order_form.text_field :amount %>
              <%= kit_order_form.hidden_field :kit_id, value: kit.id %>
            </td>
          <% end %>
        <% end %>
        <td>
          <%= f.datetime_field(:needed_by) %>
        </td>
        <td>
          <%= f.text_field :comment %>
        </td>
        <%= f.submit "Place Order" %>
      <% end %>
    </tr>
  </tbody>
</table>
